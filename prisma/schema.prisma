// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id           Int      @id @default(autoincrement())
  sku          String   @unique
  name         String
  category     String
  stock        Int
  minStock     Int
  location     String
  value        Float
  status       Status   @default(IN_STOCK)
  lastUpdated  DateTime @updatedAt
  image        String?
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
}

enum Status {
  IN_STOCK
  LOW_STOCK
  OUT_OF_STOCK
}
