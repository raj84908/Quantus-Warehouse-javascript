// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


//Stock Adjustement
model StockAdjustment {
  id           Int      @id @default(autoincrement())
  productId    Int
  product      Product  @relation(fields: [productId], references: [id])
  quantity     Int      // The adjustment amount (positive for additions, negative for deductions)
  previousStock Int     // Stock before adjustment
  newStock     Int      // Stock after adjustment
  reason       String   // Reason for adjustment (e.g., "damaged", "received", "returned")
  notes        String?  // Optional additional notes
  adjustedBy   String?  // Who made the adjustment
  createdAt    DateTime @default(now())
}

//Storing Inventory Items
model Product {
  id           Int      @id @default(autoincrement())
  sku          String   @unique
  name         String
  category     String
  stock        Int
  minStock     Int
  location     String
  value        Float
  status       Status   @default(IN_STOCK)
  lastUpdated  DateTime @updatedAt
  image        String?
  stockAdjustments StockAdjustment[]

}



model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
}

enum Status {
  IN_STOCK
  LOW_STOCK
  OUT_OF_STOCK
}
